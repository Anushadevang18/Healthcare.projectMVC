@model DoctorViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="col offset-4 pt-5 ">
    <h1>Add details of Doctor</h1>
    <form asp-controller="Doctors" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-5">
                <div class="mb-1">
                    <label asp-for="DoctorName" class="form-label"></label>
                    <input type="text" asp-for="DoctorName" class="form-control" />
                    <span asp-validation-for="DoctorName"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="EmailId" class="form-label"></label>
                    <input type="text" asp-for="EmailId" class="form-control" />
                    <span asp-validation-for="EmailId"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Qualification" class="form-label"></label>
                    <input type="text" asp-for="Qualification" class="form-control" />
                    <span asp-validation-for="Qualification"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Experience" class="form-label"></label>
                    <input type="text" asp-for="Experience" class="form-control" />
                    <span asp-validation-for="Experience"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="SpecializationName" class="form-label"></label>
                    <select asp-for="SpecializationName" asp-items="@(new SelectList(Model.Specializations,"id","SpecializationName"))" class="form-select">
                        <option value="">--Select--</option>
                    </select><span asp-validation-for="SpecializationName"></span>
                </div>
               @* 
                <div class="mb-2">
                <label asp-for="SpecializationId" class="form-label"></label>
                <input type="text" asp-for="SpecializationId" class="form-control" />
                <span asp-validation-for="SpecializationId"></span>
                </div*@>


                <div class="mt-2 d-grid">
                    <input type="submit" class="btn btn-primary" value="Add New" />
                </div>
            </div>
        </div>
    </form>
</div>

